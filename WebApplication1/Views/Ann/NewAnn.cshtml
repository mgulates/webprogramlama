@using WebApplication1.Models
@model Announcement
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, MeetingApp
<h1>Duyuru Ekle</h1>

<div class="container my-4">
    <form action="/Ann/NewAnn"method="post">
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Title:</label>
            <input asp-for="Title" type="text" class="form-control" required />
        </div>
        
        <div class="mb-3">
            <label asp-for="Text" class="form-label">Text:</label>
            <textarea asp-for="Text" class="form-control" rows="4" required></textarea>
        </div>
        
        <div class="mb-3">
            <label asp-for="ResponsiblePerson" class="form-label">Responsible Person:</label>
            <input asp-for="ResponsiblePerson" type="text" class="form-control" required />
        </div>
        
        <div class="text-end">
            <button type="submit" class="btn btn-primary">Add Announcement</button>
        </div>
    </form>
</div>


