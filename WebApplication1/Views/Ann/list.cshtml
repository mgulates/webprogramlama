@using WebApplication1.Models
@model List<Announcement>




<h1>ANNOUNCEMENTS</h1>
<table class="table">
        <thead>
            <tr>
                <th>Date </th>
                <th>Title</th>
                 <th>Responsible Person</th>
                  <th>Details</th>
                   
                
                
            </tr>
        </thead>
        <tbody>
            @foreach(Announcement a in Model){
                <tr>
                <td>@a.date</td>
                <td>@a.Title</td>
                <td>@a.ResponsiblePerson</td>
                <td><a href="/Ann/Details/@a.ID"><button>Details</button></a></td>
                    

              
            </tr>

            }
            
            
            <!-- Daha fazla duyuru ekleyebilirsiniz -->
        </tbody>
    </table>
@Html.ActionLink("Add new announcement","NewAnn","Ann")

